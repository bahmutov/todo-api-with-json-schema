{
  "name": "todo-api-with-json-schema",
  "version": "1.0.0",
  "description": "Example todo API with json schema validation",
  "main": "index.js",
  "scripts": {
    "pretest": "npm run document",
    "test": "start-server-and-test :3000 unit",
    "start": "ts-node node_modules/.bin/json-server db.json --middlewares node_modules/json-server-reset --middlewares ./add-guid.ts --middlewares ./schema-check.ts",
    "reset": "http POST :3000/reset todos:=[]",
    "document": "ts-node document > schemas.md",
    "build": "tsc || true",
    "unit": "jest",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:test": "start-server-and-test :3000 cy:run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bahmutov/todo-api-with-json-schema.git"
  },
  "keywords": [
    "todo",
    "api",
    "example",
    "json-schema"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/todo-api-with-json-schema/issues"
  },
  "homepage": "https://github.com/bahmutov/todo-api-with-json-schema#readme",
  "dependencies": {
    "@cypress/schema-tools": "2.1.1",
    "json-server": "0.12.2",
    "json-server-reset": "1.0.0",
    "quote": "0.4.0",
    "ts-node": "6.0.5",
    "typescript": "2.8.3",
    "uuid": "3.2.1"
  },
  "devDependencies": {
    "@types/got": "8.3.1",
    "@types/jest": "22.2.3",
    "@types/uuid": "3.4.3",
    "cypress": "2.1.0",
    "got": "8.3.1",
    "jest": "23.0.0",
    "prettier": "1.12.1",
    "ramda": "0.25.0",
    "start-server-and-test": "1.4.1",
    "ts-jest": "22.4.6"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
